{
    "name": "@repo/root",
    "type": "module",
    "version": "1.0.0",
    "private": false,
    "packageManager": "pnpm@9.6.0",
    "description": "Multilingual LeetCode solutions.",
    "author": {
        "name": "Zuoqiu Yingyi",
        "url": "https://github.com/Zuoqiu-Yingyi"
    },
    "license": "AGPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "https://github.com/Zuoqiu-Yingyi/leetcode-multilingual.git",
        "directory": "workspace"
    },
    "bugs": {
        "url": "https://github.com/Zuoqiu-Yingyi/leetcode-multilingual/issues"
    },
    "keywords": [
        "leetcode",
        "multilingual",
        "solutions",
        "monorepo",
        "c",
        "c++",
        "go",
        "java",
        "javascript",
        "kotlin",
        "rust",
        "typescript"
    ],
    "engines": {
        "node": "22",
        "bun": "1.1.21"
    },
    "scripts": {
        "prepare": "cd ./.. && husky ./workspace/.husky",
        "solve": "bun run --watch ./scripts/solve.ts",
        "lint-staged": "lint-staged --allow-empty",
        "lint:eslint": "eslint --max-warnings 0 .",
        "format:eslint": "eslint --fix .",
        "format:gofmt:go": "gofmt -w ./solutions/go",
        "format:clang:java": "nu ./scripts/format-java.nu",
        "format:spotless:java": "cd ./solutions/java && gradlew spotlessApply",
        "format:spotless:kotlin": "cd ./solutions/kotlin && gradlew spotlessApply",
        "check:cspell": "cspell ."
    },
    "dependencies": {
        "@repo/common": "workspace:*",
        "@repo/eslint": "workspace:*",
        "@repo/examples": "workspace:*",
        "@repo/templates": "workspace:*",
        "@repo/tsconfig": "workspace:*"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.4.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/types": "^19.0.3",
        "@types/bun": "^1.1.6",
        "@types/lint-staged": "^13.3.0",
        "@types/node": "^22.2.0",
        "@wasm-fmt/clang-format": "^18.1.8",
        "chalk": "^5.3.0",
        "chokidar": "^3.6.0",
        "cspell": "^8.13.3",
        "eslint": "^9.9.0",
        "husky": "^9.1.4",
        "lint-staged": "^15.2.9",
        "nushell": "^0.96.1",
        "prettier": "^3.3.3",
        "typescript": "^5.5.4"
    }
}
